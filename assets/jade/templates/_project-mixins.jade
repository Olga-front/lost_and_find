mixin header
	nav#header.navbar.navbar-expand-md.fixed-top(class=header_class)
		.container-fluid
			.navbar-top-area
				a.navbar-brand(href="/")
					+icon("logo")
				ul.admin-links.visible-max-sm
					if array.header_login
						li #[a(href="#") Log out]
					else
						li #[a(href="#") Login]/
						li #[a(href="#") Register]
				button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarToggler" aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation")
					span.navbar-toggler-icon
			#navbarToggler.collapse.navbar-collapse
				.pt-4.pt-sm-0.w-100
					.admin-bar.w-100
						if array.header_login
							.dropdown.profile-dropdown.mr-sm-4
								a#dropdownProfileButton.dropdown-toggle(data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
									img.profile-dropdown-avatar(src="i/home/img-3.jpg", alt="Image description")
									span Hi, Surya Handayana Handayana
								.dropdown-menu.nav-dropdown-menu.animate.slideIn(aria-labelledby="dropdownProfileButton")
									.container-fluid.nav-dropdown-container
										a.nav-dropdown-item(href="#") lorem lorem 
										a.nav-dropdown-item(href="#") one two three
							p.mb-2.mb-sm-0.mr-sm-4
								a Help
						ul.admin-links.hidden-sm
							if array.header_login
								li #[a(href="#") Log out]
							else
								li #[a(href="#") Login]/
								li #[a(href="#") Register]
						.lang-dropdown.ml-sm-4
							a#dropdownLangButton(data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
								span.mr-2 English
								img(src="i/uk-flag.svg" width="16" height="11" alt="Uk flag")
							.dropdown-menu.dropdown-menu-sm-right(aria-labelledby="dropdownLangButton")
								a.dropdown-item(href="#")
									span.mr-2 English
									img(src="i/uk-flag.svg" width="16" height="11" alt="Uk flag")
								a.dropdown-item(href="#")
									span.mr-2 English
									img(src="i/uk-flag.svg" width="16" height="11" alt="Uk flag")
					ul.nav.justify-content-start.justify-content-sm-end
						li.nav-item.dropdown
							a.nav-link.dropdown-toggle(id="navbarDropdownPartners" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
								span Partners
							.dropdown-menu.nav-dropdown-menu.animate.slideIn(aria-labelledby="navbarDropdownPartners")
								.container-fluid.nav-dropdown-container
									a.nav-dropdown-item(href="#") Health & Safety
									a.nav-dropdown-item(href="#") Sustainability
									a.nav-dropdown-item(href="#") Digitalisation
									a.nav-dropdown-item(href="#") Maintance
									a.nav-dropdown-item(href="#") Logitics
									a.nav-dropdown-item(href="#") Utilities
									a.nav-dropdown-item(href="#") See All Catergories
						li.nav-item.dropdown
							a.nav-link.dropdown-toggle(id="navbarDropdownOurSolutions" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
								span Our Solutions
							.dropdown-menu.nav-dropdown-menu.animate.slideIn(aria-labelledby="navbarDropdownOurSolutions")
								.container-fluid.nav-dropdown-container
									a.nav-dropdown-item(href="#") Lorem impsum
